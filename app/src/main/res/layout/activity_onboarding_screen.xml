<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".onboarding_screen"
    android:background="@drawable/onboard">
<ImageView
    android:layout_width="300dp"
    android:layout_height="100dp"
    android:layout_marginLeft="50dp"
    android:layout_marginTop="30dp"
    android:src="@drawable/pre2">

</ImageView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:src="@drawable/fromfarm"></ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FROM FARM TO YOUR DOORSTEP"
        android:textStyle="bold"
        android:fontFamily="@font/rampartoneregular"
        android:textColor="@color/grren"
        android:layout_marginTop="400dp"
        android:textSize="30dp"
        android:layout_marginLeft="10dp">
    </TextView>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="590dp"
        android:layout_marginLeft="280dp"
        android:text="NEXT"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold"
        android:fontFamily="@font/rampartoneregular">
    </Button>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="590dp"
        android:layout_marginLeft="10dp"
        android:text="SKIP"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:fontFamily="@font/rampartoneregular"
        android:textStyle="bold">
    </Button>
</RelativeLayout>