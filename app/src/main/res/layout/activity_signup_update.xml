<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/daylight"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".Signup_update">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView android:id="@+id/updatename"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PROFILE UPDATE"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="40sp"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/rampartoneregular">
                </TextView>

                <TextView
                    android:id="@+id/img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="IMAGE"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:layout_marginTop="150dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/rampartoneregular"/>
                <ImageView
                    android:id="@+id/profile"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="250dp"
                    android:layout_marginTop="100dp"
                    android:src="@drawable/clients_profile"

                    />

                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="200dp"
                    android:hint="FULL-NAME"
                    android:textSize="30dp"
                    android:textColor="@color/reen"
                    android:textStyle="bold"
                    android:textAlignment="center">
                </EditText>
                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="280dp"
                    android:hint="E-MAIL"
                    android:textSize="30dp"
                    android:textColor="@color/reen"
                    android:textStyle="bold"
                    android:textAlignment="center">
                </EditText>
                <Spinner
                    android:id="@+id/spinner1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/btn_dropdown"
                    android:spinnerMode="dropdown"
                    android:layout_marginTop="360dp">
                </Spinner>
                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="420dp"
                    android:hint="PASSWORD"
                    android:textSize="30dp"
                    android:textColor="@color/reen"
                    android:textStyle="bold"
                    android:textAlignment="center">
                </EditText>
                <EditText
                    android:id="@+id/company"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="COMPANY"
                    android:layout_marginTop="500dp"
                    android:textStyle="bold"
                    android:textColor="@color/reen"
                    android:textAlignment="center"
                    android:textSize="30dp">
                </EditText>
                <EditText
                    android:id="@+id/phone1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="PHONE"
                    android:layout_marginTop="580dp"
                    android:textStyle="bold"
                    android:textColor="@color/reen"
                    android:textAlignment="center"
                    android:textSize="30dp">
                </EditText>
                <EditText
                    android:id="@+id/city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="CITY"
                    android:layout_marginTop="660dp"
                    android:textStyle="bold"
                    android:textColor="@color/reen"
                    android:textAlignment="center"
                    android:textSize="30dp">
                </EditText>
                <Spinner
                    android:id="@+id/spinner2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/btn_dropdown"
                    android:spinnerMode="dropdown"
                    android:layout_marginTop="720dp">
                </Spinner>
                <EditText
                    android:id="@+id/descript"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="BUSNIESS-DESCRIPTION"
                    android:layout_marginTop="800dp"
                    android:textStyle="bold"
                    android:textColor="@color/reen"
                    android:textAlignment="center"
                    android:textSize="30dp">
                </EditText>
                <Button
                    android:id="@+id/ups"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="900dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="UPDATE PROFILE"
                    android:textSize="20sp"
                    android:textColor="@color/white">
                </Button>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
