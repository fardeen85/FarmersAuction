<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".crop"
    android:background="@drawable/storeupdates">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="STORE ITEM UPDATE"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:textStyle="bold"
        android:shadowColor="@color/white"
        android:shadowRadius="10"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="60dp"
        android:fontFamily="@font/rampartoneregular">
    </TextView>

    <TextView
        android:id="@+id/st_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="STORE ITEM IMAGE"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/rampartoneregular">
    </TextView>


    <ImageView
        android:id="@+id/profile313"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="160dp"
        android:src="@drawable/stall"
        />
    <EditText
        android:id="@+id/st_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ITEM ID"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_marginTop="250dp"
        android:textAlignment="center">
    </EditText>
    <EditText
        android:id="@+id/st_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ITEM NAME"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_marginTop="320dp"
        android:textAlignment="center">
    </EditText>
    <EditText
        android:id="@+id/st_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ITEM TYPE"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_marginTop="390dp"
        android:textAlignment="center">
    </EditText>
    <EditText
        android:id="@+id/st_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ITEM PRICE"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_marginTop="460dp"
        android:textAlignment="center">
    </EditText>
    <EditText
        android:id="@+id/st_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ITEM DESCRIPTION"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_marginTop="530dp"
        android:textAlignment="center">
    </EditText>
    <Button
        android:id="@+id/st_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UPDATE ITEM"
        android:textSize="20sp"
        android:layout_marginTop="600dp"
        android:background="@drawable/custom_button"
        android:textColor="@color/white">
    </Button>
</RelativeLayout>