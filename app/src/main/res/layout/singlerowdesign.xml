<?xml version="1.0" encoding="UTF-8"?>
<androidx.cardview.widget.CardView
    app:cardUseCompatPadding="true"
    android:elevation="8dp"
    app:cardCornerRadius="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/grrrrrn">

        <ImageView
            android:layout_width="290dp"
            android:layout_height="165dp"
            android:layout_gravity="center"
            android:src="@drawable/pre2"></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CROPS DETAIL'S"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:textStyle="bold"
            android:shadowColor="@color/black"
            android:shadowRadius="10">
        </TextView>
    </LinearLayout>

    <RelativeLayout android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="15dp">

    <ImageView
        android:layout_height="120dp"
        android:layout_width="120dp"
        android:id="@+id/img1"
        android:src="@mipmap/ic_launcher"
        android:layout_marginTop="260dp"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/namet"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/img1"
        android:textColor="@color/grren"
        android:textSize="25sp"
        android:textStyle="bold"
        android:text="This is Crop Name"
        android:layout_marginTop="260dp"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/type"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/img1"
        android:textColor="@color/grren"
        android:textSize="25sp"
        android:text="This is Crop Type"
        android:layout_below="@id/namet"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/description"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/img1"
        android:textColor="@color/grren"
        android:textSize="25sp"
        android:text="This is Crop Description"
        android:layout_below="@id/type"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/price"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/img1"
            android:textColor="@color/grren"
            android:textSize="25sp"
            android:text="This is Crop Price"
            android:layout_below="@id/description"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/cropid"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/img1"
            android:textColor="@color/grren"
            android:textSize="25sp"
            android:text="This is Crop ID"
            android:layout_below="@id/price"/>
        <Button
            android:id="@+id/deletbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cropid"
            android:text="DELETE REORD"
            android:textColor="@color/white"
            android:textSize="25dp"></Button>
</RelativeLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>