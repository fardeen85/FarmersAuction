<?xml version="1.0" encoding="UTF-8"?>
<androidx.cardview.widget.CardView
    app:cardUseCompatPadding="true"
    android:elevation="8dp"
    app:cardCornerRadius="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/grrrrrn">

        <ImageView
            android:layout_width="290dp"
            android:layout_height="165dp"
            android:layout_gravity="center"
            android:src="@drawable/pre2"></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BIDDING DETAIL'S"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:textStyle="bold"
            android:shadowColor="@color/black"
            android:shadowRadius="10">
        </TextView>
    </LinearLayout>


    <RelativeLayout android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="15dp">

        <ImageView
            android:layout_height="120dp"
            android:layout_width="120dp"
            android:id="@+id/img1"
            android:src="@mipmap/ic_launcher"
            android:layout_marginTop="260dp"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@id/img1"
            android:text="This is Crop Name"
            android:textColor="@color/grren"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginTop="260dp"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/cropid"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/img1"
            android:textSize="25sp"
            android:textColor="@color/grren"
            android:layout_below="@+id/prize"
            android:text="This is Crop ID"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/typew"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/img1"
            android:textColor="@color/grren"
            android:textSize="25sp"
            android:text="This is Crop Type"
            android:layout_below="@id/name"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/description123"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/img1"
            android:textColor="@color/grren"
            android:textSize="25sp"
            android:text="This is Crop Description"
            android:layout_below="@id/typew"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/prize"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/img1"
            android:textColor="@color/grren"
            android:textSize="25sp"
            android:text="This is Crop Price"
            android:layout_below="@id/description123"/>
        <Button
            android:id="@+id/bid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cropid"
            android:text="BID"
            android:textSize="25dp"
            android:textColor="@color/white"></Button>
        <Spinner
            android:id="@+id/spinner3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown"
            android:layout_marginLeft="130dp"
            android:layout_below="@id/cropid"
            android:entries="@array/spinner_items">
        </Spinner>
    </RelativeLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>